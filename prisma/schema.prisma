generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model tests {
  id         String       @id @default(uuid())
  name       String       @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime?
  deletedAt  DateTime?
  questions  questions[]
  executions executions[]
}

model questions {
  id          Int       @id @default(autoincrement())
  testId      String
  title       String
  rightOption String
  options     Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  deletedAt   DateTime?
  test        tests     @relation(fields: [testId], references: [id])
}

model executions {
  id               String   @id @default(uuid())
  testId           String
  ip               String
  totalQuestions   Int
  totalCorrect     Int
  totalWrong       Int
  resultPercentage Int
  createdAt        DateTime @default(now())
  test             tests    @relation(fields: [testId], references: [id])
}

model users {
  id        Int        @id @default(autoincrement())
  name      String
  cpf       String
  email     String
  password  String     @db.LongText
  createdAt DateTime   @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
  userTypes userTypes?
}

model types {
  id              Int               @id @default(autoincrement())
  default         Boolean
  description     String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime?
  deletedAt       DateTime?
  functionalities functionalities[]
}

model userTypes {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  typeId    Int
  createdAt DateTime @default(now())
  user      users    @relation(fields: [userId], references: [id])

  @@map("user_types")
}

model functionalities {
  id            Int      @id @default(autoincrement())
  typeId        Int
  description   String
  endpoints     Json
  abbreviations String
  tag           String
  createdAt     DateTime @default(now())
  type          types    @relation(fields: [typeId], references: [id])
}
