generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model tests {
  id        String      @id @default(uuid())
  name      String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
  questions questions[]
}

model questions {
  id          Int       @id @default(autoincrement())
  testId      String
  title       String
  rightOption String
  options     Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  deletedAt   DateTime?
  test        tests     @relation(fields: [testId], references: [id])
}
